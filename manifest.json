{
  "manifest_version": 3,
  "name": "YouTube Playlist Tracker",
  "version": "1.0",
  "description": "Track your progress in a YouTube playlist",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "playlist-icon.png",
      "48": "playlist-icon.png",
      "128": "playlist-icon.png"
    }
  },
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "playlist-icon.png",
    "48": "playlist-icon.png",
    "128": "playlist-icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}

